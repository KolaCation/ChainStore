@model LoginCustomerViewModel
@{
    ViewBag.Title = "Login";
}

<form asp-controller="Account" asp-action="Login" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email...">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Password" class="form-control" placeholder="Password...">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-check">
        <input asp-for="RememberMe" type="checkbox" class="form-check-input" style="height: 1.25rem; width: 1.25rem;"/>
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>
    <div class="form-group row mt-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>
</form>