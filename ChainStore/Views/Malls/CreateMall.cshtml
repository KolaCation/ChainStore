@model CreateMallViewModel
@{
    ViewBag.Title = "Create Mall";
}

<form asp-controller="Malls" asp-action="CreateMall" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name...">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Location" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Location" class="form-control" placeholder="Location...">
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <a asp-action="Index" asp-controller="Malls" class="btn-primary btn">Back</a>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>
