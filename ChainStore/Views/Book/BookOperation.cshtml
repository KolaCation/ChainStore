@model ProductClientViewModel
@{
    ViewBag.Title = "Book Operation";
}
<div asp-validation-summary="All" class="text-danger mt-2"></div>
<div class="mt-3">
    <div class="card text-center">
        <h5 class="card-header">@Model.Product.Name</h5>
        <div class="card-body">
            <p class="card-text mt-3">
                Price: @Model.Product.PriceInUAH UAH
            </p>
        </div>
        <div class="card-footer text-center">
            <form method="post" asp-action="BookOperation" asp-controller="Book">
                <input type="hidden" asp-for="ClientId" value="@Model.ClientId" />
                <input type="hidden" asp-for="ProductId" value="@Model.Product.Id" />
                <div class="d-flex flex-row justify-content-between">
                    <label asp-for="BookDaysCount" class="col-form-label">Days Count: </label>
                    <input type="number" asp-for="BookDaysCount" value="1" max="7" min="1" class="form-control col-2" placeholder="days...">
                </div>
                <span asp-validation-for="BookDaysCount" class="text-danger"></span>
                <br/>
                <a asp-action="Index" asp-controller="Stores" class="btn-primary btn mt-3">Back</a>
                <button type="submit" value="sumbit" class="btn btn-success mt-3">Book</button>
            </form>
        </div>
    </div>
</div>

