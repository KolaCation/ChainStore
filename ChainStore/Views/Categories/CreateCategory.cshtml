@model CreateCategoryViewModel
@{
    ViewBag.Title = "Create Category";
}

<form asp-controller="Categories" asp-action="CreateCategory" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="CategoryName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CategoryName" class="form-control" placeholder="Name...">
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <a asp-action="Index" asp-controller="Stores" class="btn-primary btn">Back</a>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>